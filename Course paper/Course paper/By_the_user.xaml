<Window x:Class="Course_paper.By_the_user"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Course_paper"
        mc:Ignorable="d"
        Title="By_the_user" Height="450" Width="800">
    <Grid>
        <ListView Name="UsersListView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Name}" Width="120"/>
                    <GridViewColumn Header="Отдел" DisplayMemberBinding="{Binding Department}" Width="120"/>
                    <GridViewColumn Header="Модель компьютера" DisplayMemberBinding="{Binding ComputerModel}" Width="200"/>
                                    
                </GridView>
            </ListView.View>
        </ListView>
    
    </Grid>
</Window>
