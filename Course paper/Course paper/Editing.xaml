<Window x:Class="Course_paper.Editing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Course_paper"
        mc:Ignorable="d"
        Title="Editing" Height="450" Width="500">
    <Grid>
        <Grid>
            <Label Content="Наименование:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
            <TextBox x:Name="txtName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,20,20,0" Width="300"/>

            <Label Content="Серийный номер:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,60,0,0"/>
            <TextBox x:Name="txtSerialNumber" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,60,20,0" Width="300"/>

            <Label Content="Описание:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0"/>
            <TextBox x:Name="txtDescription" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,100,20,0" Width="300" Height="120"/>

            <Button Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="20,240,0,0" Click="SaveButton_Click"/>
        </Grid>
    </Grid>
</Window>
